@using BHWeb.DataObject;
@{
    Layout = null;
    List<DutiesDataObject> dutiesList = ViewData["DutiesList"] as List<DutiesDataObject>;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DutiesManage</title>
    <link href="~/Assets/css/pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Assets/js/jquery-1.3.2.min.js"></script>
    <style type="text/css">
        .tab {
            margin: 0 auto;
            margin-bottom: 5px;
        }

            .tab tr {
                line-height: 25px;
            }

                .tab tr:hover {
                    background-color: #ecebeb;
                }

            .tab td {
                font-size: 13px;
                padding: 0px 5px;
                text-align: center;
            }

            .tab .td_title {
                width: 100px;
                text-align: right;
            }

            .tab .td_content {
                text-align: left;
            }

        .sub {
            border-style: none;
            border-color: inherit;
            border-width: medium;
            width: 82px;
            height: 35px;
            line-height: 38px;
            border-radius: 3px;
            background: url(../Assets/images/sub_bg.gif) no-repeat;
            cursor: pointer;
            padding-left: 32px;
            top: 0px;
            margin-right: 0px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .score {
            width: 30px;
            height: 20px;
            border-radius: 2px;
            background-color: #FFF;
            border: 1px #CCCCCC solid;
        }

        .dialog {
            width: 640px;
            height: 420px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -320px;
            margin-top: -210px;
            box-shadow: 0px 0px 20px #000;
            background: #fff;
            border-radius: 5px;
        }

            .dialog .dialog-title {
                background: #cae2f0;
                width: 630px;
                height: 40px;
                line-height: 40px;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
                font-family: "Microsoft YaHei";
                font-size: 14px;
                font-weight: bold;
                padding-left: 10px;
                letter-spacing: 2px;
            }

            .dialog .content {
                font-family: "Microsoft YaHei";
                font-size: 12px;
            }

                .dialog .content td {
                    padding: 5px;
                }

        .dialog-btn {
            text-align: center;
            border: 1px solid red;
            height: 100%;
            width: 100%;
        }

            .dialog-btn li {
                list-style-type: none;
                float: left;
                margin: 5px;
            }

        .btn-cancel {
            background: url(../Assets/images/close.png) no-repeat;
            width: 25px;
            height: 25px;
            float: right;
            margin-right: 7px;
            margin-top: 7px;
            cursor: pointer;
        }

        .checkbox {
            width: 15px;
            height: 15px;
        }
    </style>
    <script type="text/javascript">
        function btnSaveClick(id) {
            $.ajax({
                url: "SaveDuties",
                data: $("#frm_" + id).serialize(),
                type: "post",
                success: function (data) {
                    location.reload();
                }
            });
        }
        function btnDeleteClick(id) {
            $.ajax({
                url: "DeleteDuties",
                data: $("#frm_" + id).serialize(),
                type: "post",
                success: function (data) {
                    $("#tr_"+id).remove();
                }
            });
        }
        function spanClick(id) {
            $("#span_" + id).hide();
            $("#btnDel_" + id).hide();
            $("#div_" + id).show();
            $("#btn_" + id).show();
            $("#btnCancel_" + id).show();
        }
        function cancel(id) {
            if (id == 0)
            {
                $("#tr_0").remove();
                $("#btn_add").removeAttr("disabled");
            }
            else
            {
                $("#span_" + id).show();
                $("#btnDel_" + id).show();
                $("#div_" + id).hide();
                $("#btn_" + id).hide();
                $("#btnCancel_" + id).hide();
            }

        }
        function addDuties() {
            var row="<tr id='tr_0' bordercolor='#d3dbde' bgcolor='#fbf7f7' height='35px'>"
        +"<td>0</td><td><form id='frm_0'><input type='hidden' name='ID' value='0'/><input type='text' name='Name' value=''/>"
        +"</form></td><td class='td_content'><span id='btn_0'><input type='button' value='保存' onclick='btnSaveClick(0)' /></span>"
        +"<span><input type='button' value='取消' onclick='cancel(0)'/></span>"
        +"</td></tr>";

            $("#tab1")
                .append(row);
            $("#btn_add").attr("disabled", true);
        }
    </script>
</head>
<body>
    <div>
        <div>
            <span><input id="btn_add" type="button" value="添加" onclick="addDuties()" /></span>
        </div>
        <table id="tab1" width="100%" border="1px" bordercolor="#FFFFFF" cellpadding="0" cellspacing="0" class="tab">
            <thead>
            <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                <th width="50">ID</th>
                <th width="183">职务名称</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (DutiesDataObject duty in dutiesList)
                {
                    <tr id="tr_@duty.ID" bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                        <td>@duty.ID</td>
                        <td>
                          <span id="span_@duty.ID" style="cursor:pointer;" onclick="spanClick(@duty.ID)">@duty.Name</span>
                            <div id="div_@duty.ID" style="display:none;">
                              <form id="frm_@duty.ID">
                                  <input type="hidden" name="ID" value="@duty.ID" />
                                  <input type="text" name="Name" value="@duty.Name"/>
                              </form>
                            </div>
                        </td>
                        <td class="td_content">
                            <span id="btn_@duty.ID" style="display:none;"><input type="button" value="保存" onclick="btnSaveClick(@duty.ID)" /></span>
                            <span id="btnDel_@duty.ID"><input type="button" value="删除" onclick="btnDeleteClick(@duty.ID)" /></span>
                            <span id="btnCancel_@duty.ID" style="display:none;"><input type="button" value="取消" onclick="cancel(@duty.ID)" /></span>
                        </td>
                    </tr>
                 }
         </tbody>
        </table>
    </div>
</body>
</html>
