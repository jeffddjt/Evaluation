@using BHWeb.DataObject;
@{
    Layout = null;
    ArticleDataObject article = ViewData["Article"] as ArticleDataObject;
    
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑用户</title>
    <style type="text/css">
        .tab {
            margin: 0 auto;
        }

            .tab tr {
                line-height: 25px;
            }

                .tab tr:hover {
                    background-color: #ecebeb;
                }

            .tab td {
                font-size: 13px;
                padding: 0px 5px;
            }

        .sub {
            border-style: none;
            border-color: inherit;
            border-width: medium;
            width: 82px;
            height: 35px;
            line-height: 38px;
            border-radius: 3px;
            background: url(../../Assets/images/sub_bg.gif) no-repeat;
            cursor: pointer;
            padding-left: 18px;
            top: 0px;
            margin-right: 0px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .score {
            width: 300px;
            height: 20px;
            border-radius: 2px;
            background-color: #FFF;
            border: 1px #CCCCCC solid;
        }
    </style>
    <script src="js/jquery-1.8.2.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#Button1').click(function () {
                var biaoti = $('#Text1').val();
                var neirong = $('#Text2').val();

                if (biaoti == "") {
                    alert("文章标题不能为空！");
                    return false;
                }
                else if (biaoti.length > 12) {
                    alert("文章标题不能大于12个字符！");
                    return false;
                }
                else if (neirong == "") {
                    alert("文章内容不能为空！");
                    return false;
                }
                else if (neirong.length > 70) {
                    alert("文章内容不能大于70个字符！");
                    return false;
                }
                else {
                    return true;
                }
            });
        });

    </script>
</head>
<body>
    <form id="form1" method="post" action="SaveArticle">
        <div>
            <table width="1000px" border="1px" bordercolor="#FFFFFF" cellpadding="0" cellspacing="0"
                   class="tab">
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td>
                        标题
                    </td>
                    <td style="text-align: left;">
                        <input name="Title" id="ArticleTitle" type="text" class="score" value="@article.Title"/>
                        <input type="hidden" name="ID" value="@article.ID" />
                    </td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td>
                        内容
                    </td>
                    <td style="text-align: left;">
                        <textarea name="Text" id="ArticleText" class="score"style="height: 77px">@article.Text</textarea>
                    </td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px" style="text-align: center">
                    <td colspan="5">
                        <input type="submit" ID="Button1" value="提交" class="sub"/>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</body>
</html>
