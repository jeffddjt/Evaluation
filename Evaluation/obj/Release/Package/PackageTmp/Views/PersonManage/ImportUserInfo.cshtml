
@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ImportUserInfo</title>
    <link href="~/Assets/css/pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Assets/js/jquery-1.3.2.min.js"></script>
        <style type="text/css">
        .tab {
            margin: 0 auto;
            margin-bottom: 5px;
        }

            .tab tr {
                line-height: 25px;
            }

                .tab tr:hover {
                    background-color: #ecebeb;
                }

            .tab td {
                font-size: 13px;
                padding: 0px 5px;
                text-align: center;
            }
            .tab .td_title {
                width:100px;
                text-align:right;
            }
            .tab .td_content {
                text-align:left;
            }
        .sub {
            border-style: none;
            border-color: inherit;
            border-width: medium;
            width: 82px;
            height: 35px;
            line-height: 38px;
            border-radius: 3px;
            background: url(../Assets/images/sub_bg.gif) no-repeat;
            cursor: pointer;
            padding-left: 32px;
            top: 0px;
            margin-right: 0px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .score {
            width: 30px;
            height: 20px;
            border-radius: 2px;
            background-color: #FFF;
            border: 1px #CCCCCC solid;
        }

        .dialog {
            width: 640px;
            height: 420px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -320px;
            margin-top: -210px;
            box-shadow: 0px 0px 20px #000;
            background: #fff;
            border-radius: 5px;
        }

            .dialog .dialog-title {
                background: #cae2f0;
                width: 630px;
                height: 40px;
                line-height: 40px;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
                font-family: "Microsoft YaHei";
                font-size: 14px;
                font-weight: bold;
                padding-left: 10px;
                letter-spacing: 2px;
            }

            .dialog .content {
                font-family: "Microsoft YaHei";
                font-size: 12px;
            }

                .dialog .content td {
                    padding: 5px;
                }

        .dialog-btn {
            text-align: center;
            border: 1px solid red;
            height: 100%;
            width: 100%;
        }

            .dialog-btn li {
                list-style-type: none;
                float: left;
                margin: 5px;
            }

        .btn-cancel {
            background: url(../Assets/images/close.png) no-repeat;
            width: 25px;
            height: 25px;
            float: right;
            margin-right: 7px;
            margin-top: 7px;
            cursor: pointer;
        }
    </style>
    <script type="text/javascript">
        function deleteAll() {
            if(confirm("清除后不可恢复，确定清除所有数据吗？"))
            $.ajax({
                url: "DeleteAllUserInfo",
                type: "post",
                error: function () {
                    alert("清除失败!");
                },
                success: function (data) {
                    alert("成功删除"+data+"条数据");
                }
            });
        }
    </script>
</head>
<body>
    <div> 
        <form enctype="multipart/form-data" method="post">
            <table width="100%" border="1px" bordercolor="#FFFFFF" cellpadding="0" cellspacing="0" class="tab">
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td class="td_title">表格模板：</td>
                    <td class="td_content"><a href="TempleteTable">点此下载</a></td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td class="td_title">
                        文件上传：
                    </td>
                    <td class="td_content">
                        <input type="file" name="file" />
                    </td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td class="td_title">清空原有数据:</td>
                    <td class="td_content"><input type="button" value="清空" onclick="deleteAll()"/></td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td class="td_content" colspan="2"><input type="submit" value="上传并导入" /></td>
                </tr>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                    <td colspan="2" style="color:red;">
                        @(ViewData["Msg"]?.ToString())
                    </td>
                </tr>
            </table>                       
        </form>

    </div>

</body>
</html>
