@using BHWeb.DataObject;
@{
    Layout = null;
    List<UserRoleDataObject> userRoleList = ViewData["UserRoleList"] as List<UserRoleDataObject>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RoleManage</title>
    <link href="~/Assets/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/css/pagination.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Assets/js/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="~/Assets/js/jquery.pagination.js"></script>
    <script type="text/javascript" src="~/Assets/js/function.js"></script>

    <script type="text/javascript">
        $(function () {
            $(".msgtable tr:nth-child(odd)").addClass("tr_bg"); //隔行变色
            $(".msgtable tr").hover(
                function () {
                    $(this).addClass("tr_hover_col");
                },
                function () {
                    $(this).removeClass("tr_hover_col");
                }
            );
        });
        function newRole() {
            location.href = "EditRole";
        }
        function editRole(id) {
            location.href = "EditRole?id=" + id;
        }
        function removeRole(id) {
            if (!confirm("确定要删除该角色吗？"))
                return;
            location.href = "RemoveRole?id=" + id;
        }
    </script>
</head>
<body>
    <div> 
        <table width="100%" border="0" cellspacing="0" cellpadding="0" class="msgtable">
            <tr>
                <th style="width:100px;">ID</th>
                <th style="width:200px;">角色名称</th>
                <th style="width:200px"></th>
                <th></th>
            </tr>
            @foreach (UserRoleDataObject userRole in userRoleList)
            {
                <tr>
                    <td>@userRole.ID</td>
                    <td>@userRole.Name</td>
                    <td>
                        <span><input type="button" value="编辑" onclick="editRole('@userRole.ID')" /></span>
                        <span><input type="button" value="删除" onclick="removeRole('@userRole.ID')"/></span>
                    </td>
                    <td></td>
                </tr>
            }
        </table>
        <div>
            <span><input type="button" value="添加" class="btn_bg" onclick="newRole()"/></span>
        </div>
</div>
</body>
</html>
