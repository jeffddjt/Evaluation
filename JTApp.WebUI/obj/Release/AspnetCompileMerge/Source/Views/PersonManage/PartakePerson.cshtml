@using JTApp.DataObject;
@{
    Layout = null;
    List<UserInfoDataObject> userList = ViewData["UserList"] as List<UserInfoDataObject>;
    int pageSize = int.Parse(ViewData["PageSize"].ToString());
    int pageIndex = int.Parse(ViewData["PageIndex"].ToString());
    int pageCount = int.Parse(ViewData["PageCount"].ToString());
    int recordCount = int.Parse(ViewData["RecordCount"].ToString());
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>参与评测人员管理</title>
    <link href="~/Assets/css/pagination.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Assets/js/jquery-1.3.2.min.js"></script>
    <style type="text/css">
        .tab {
            margin: 0 auto;
            margin-bottom: 5px;
        }

            .tab tr {
                line-height: 25px;             
            }

                .tab tr:hover {
                    background-color: #ecebeb;
                }

            .tab td {
                font-size: 13px;
                padding: 0px 5px;
                text-align:center;
            }
        table{
            border-collapse;
        }
        th,td{
            border:1px solid #000;
        }
        .sub {
            border-style: none;
            border-color: inherit;
            border-width: medium;
            width: 82px;
            height: 35px;
            line-height: 38px;
            border-radius: 3px;
            background: url(../Assets/images/sub_bg.gif) no-repeat;
            cursor: pointer;
            padding-left: 32px;
            top: 0px;
            margin-right: 0px;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .score {
            width: 30px;
            height: 20px;
            border-radius: 2px;
            background-color: #FFF;
            border: 1px #CCCCCC solid;
        }

        .dialog {
            width: 640px;
            height: 420px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -320px;
            margin-top: -210px;
            box-shadow: 0px 0px 20px #000;
            background: #fff;
            border-radius: 5px;
        }

            .dialog .dialog-title {
                background: #cae2f0;
                width: 630px;
                height: 40px;
                line-height: 40px;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
                font-family: "Microsoft YaHei";
                font-size: 14px;
                font-weight: bold;
                padding-left: 10px;
                letter-spacing: 2px;
            }

            .dialog .content {
                font-family: "Microsoft YaHei";
                font-size: 12px;
            }

                .dialog .content td {
                    padding: 5px;
                }

        .dialog-btn {
            text-align: center;
            border: 1px solid red;
            height: 100%;
            width: 100%;
        }

            .dialog-btn li {
                list-style-type: none;
                float: left;
                margin: 5px;
            }

        .btn-cancel {
            background: url(../Assets/images/close.png) no-repeat;
            width: 25px;
            height: 25px;
            float: right;
            margin-right: 7px;
            margin-top: 7px;
            cursor: pointer;
        }
    </style>
    <script type="text/javascript">
        function checkAll(checkbox) {
            var checked = $(checkbox).attr("checked");
            $(":checkbox").each(function () {
                $(this).attr("checked", checked);
            });
        }
        function removeUserInfo() {
            if (!confirm("确定要删除吗？"))
                return;
            $.ajax({
                url: "RemovePerson",
                type: "post",
                data: $("#operator").serialize(),
                success: function (data)
                {
                    if (data == "true") {
                        location.reload();
                    }
                }
            });
        }
        function addPerson() {
            location.href = "EditUserInfo";
        }
        function importUserInfo() {
            location.href = "ImportUserInfo";
        }
    </script>
</head>
<body>
    <div> 
        <form id="operator" action="RemovePerson" method="post">
        <div style="height:30px;">
            <span><input type="button" value="添加" onclick="addPerson()"/></span>
            <span><input type="button" value="删除" onclick="removeUserInfo()"/></span>
            <span><input type="button" value="导入" onclick="importUserInfo()"/></span>
        </div>
        <table width="100%" border="1px" bordercolor="#FFFFFF" cellpadding="0" cellspacing="0" class="tab">
            <thead>
                <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px";>
                    <th width="30"><input type="checkbox" onclick="checkAll(this)" /></th>
                    <th width="50">工号</th>
                    <th width="100">姓名</th>
                    <th width="200">部门</th>
                    <th width="200">职称</th>
                    <th width="200">职务</th>
                    <th width="200">专业带头人/骨干</th>
                    <th width="200">系部党政办主任</th>
                    <th width="200">辅导员</th>
                    <th width="200">教学系秘</th>
                    <th width="200">学工办主任</th>
                    <th width="200">民主党派</th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserInfoDataObject userInfo in userList)
                {
                    <tr bordercolor="#d3dbde" bgcolor="#fbf7f7" height="35px">
                        <td><input type="checkbox" name="selected" value="@userInfo.ID"/></td>
                        <td>@userInfo.WorkNo</td>
                        <td><a href="EditUserInfo?id=@userInfo.ID">@userInfo.UserName</a></td>
                        <td>@userInfo.DepartmentName</td>
                        <td>@userInfo.Professional</td>
                        <td>@(userInfo.DutiesName)</td>
                        <td>@(userInfo.MajorLeader ? "是" : "否")</td>
                        <td>@(userInfo.Director ? "是" : "否")</td>
                        <td>@(userInfo.Instructor ? "是" : "否")</td>
                        <td>@(userInfo.Secretary ? "是" : "否")</td>
                        <td>@(userInfo.General ? "是" : "否")</td>
                        <td>@(userInfo.Democratic ? "是" : "否")</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
        <div style="height:30px;line-height:30px;text-align:left;padding-left:30px;margin-bottom:30px;">
            <form>
                <span>第</span>
                <span>@pageIndex</span>
                <span>页/共</span>
                <span>@pageCount</span>
                <span>页</span>
                <span>共</span>
                <span>@recordCount</span>
                <span>条记录</span>
                <span>每页</span>
                <input type="text" name="pageSize" style="width:30px;text-align:center;" value="@pageSize" />
                <span>行</span>
                <span><a href="PartakePerson?pageSize=@pageSize&pageIndex=1"><img src="~/Assets/images/first.gif" /></a></span>
                <span><a href="PartakePerson?pageSize=@pageSize&pageIndex=@(pageIndex-1)"><img src="~/Assets/images/prev.gif" /></a></span>
                <span><input type="text" name="pageIndex" style="width:30px;text-align:center" value="@pageIndex" /></span>
                <span><input type="submit" value="GO" /></span>
                <span><a href="PartakePerson?pageSize=@pageSize&pageIndex=@(pageIndex+1)"><img src="~/Assets/images/next.gif" /></a></span>
                <span><a href="PartakePerson?pageSize=@pageSize&pageIndex=@(pageCount)"><img src="~/Assets/images/last.gif" /></a></span>
            </form>
        </div>

    </div>
</body>
</html>
